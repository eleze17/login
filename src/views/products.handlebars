<div class="container-fluid" >
<div class="row">
<div class="col-6"> 
<h1>Bienvenido a productos {{usuario.nombre}}</h1>

   {{#if admin}}
   <div class="col-10 align-self-start">
      <label for="titlelabel" class="col-form-label">Nombre del producto</label>
      <div>
         <input type="text"  class="form-control" id="title">
      </div>
   </div>
   <div class="col-10 align-self-start">
      <label for="descripcionlabel" class="col-form-label">Descripcion</label>
      <div>
         <input type="text"  class="form-control" id="descripcion">
      </div>
   </div>
   <div class="col-10 align-self-start">
      <label for="categorialabel" class="col-form-label">Categoria</label>
      <div>
         <input type="text"  class="form-control" id="categoria">
      </div>
   </div>
   <div class="col-10 align-self-start">
      <label for="preciolabel" class="col-form-label">Precio</label>
      <div>
         <input type="number"  class="form-control" id="precio">
      </div>
   </div>
   <div class="col-10 align-self-start">
      <label for="stocklabel" class="col-form-label">Stock</label>
      <div>
         <input type="number"  class="form-control" id="stock">
      </div>
   </div>
   <div class="col-10 align-self-start">
      <label for="codigolabel" class="col-form-label">Codigo</label>
      <div>
         <input type="text"  class="form-control" id="codigo">
      </div>
   </div>
   <div class="col align-self-start">
      <button id="enviar" type="button" class="btn btn-outline-primary mt-2">Enviar</button>
   </div>
</div>
{{/if}}
<div class="col-6">
   <div class="row">
   <h1 class="col-9">Lista de productos</h1>
   <button class="col-2 p-1 m-1" id="logout">Desloguearse</button>
   </div>
   <table class="table">
      <thead>
         <tr id="primera">
            <th id="encabezado" scope="col"> Nombre</th>
            <th scope="col"> Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">Codigo</th>
            <th scope="col">Stock</th>
            <th scope="col">Categoria</th>
            <th scope="col">Ir al producto</th>
            <th scope="col">+</th>
            </tr>
      </thead>
        <tbody>
    
      {{#each productos}}
         <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{price}}</td>
            <td>{{code}} </td>
            <td>{{stock}} </td>  
            <td>{{category}} </td>
            <td> <button id="detail"><a href='./products/{{this._id}}'>Ir al producto</a></button></td>
            <td><button class={{this._id}} name="addcart">Agregar al carrito</button></td>
        
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>
<script src="../js{{js}}"></script>  